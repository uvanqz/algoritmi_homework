class Solution(object):
    def numberOfMatches(self, n):
        matches = 0 #количество матчей в одном раунде
        m = 0 #общее количество матчей
        while (n > 1): #цикл, выполняющийся, пока число не станет равным 1, то есть пока не будет определён победитель
            if n % 2 == 0: #если количество команд чётное
                matches = n / 2
                n =  n / 2
            elif n % 2 != 0: #если количество команд нечётное
                matches = (n - 1) / 2
                n = (n - 1) / 2 + 1
            m = m + matches #к общему количеству матчей прибавляется количество сыгранных матчей в каждом раунде
        return m #возвращаем количество матчей, сыгранных в турнире

#Сложность данной программы O(n).
