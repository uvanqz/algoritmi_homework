class Solution(object):
    def minimumAbsDifference(self, arr):
        otvet = [] #создаём пустой список, в который будут вноситься пары элементов
        arr.sort() #сортировка массива по возрастанию
        otvet = [arr[:2]] #берём 0 и 1 элемент
        minimum = abs(arr[1] - arr[0]) #берём за минимум разность этих элементов
        for i in range(2, len(arr)): #для i от 2 элемента до последнего
            a = arr[i - 1:i + 1] #список из элемента i-1 и i
            if abs(a[1] - a[0]) < minimum: #если модуль разности i и i-1 меньше минимума 
                otvet = [a] #добавляем в итоговый список эту пару элементов
                minimum = abs(a[1] - a[0]) #минимум приравниваем к их разности
            elif abs(a[1] - a[0]) == minimum: #если разность элементов равняется минимуму
                otvet.append(a) #добавляем в итоговый список эту пару элементов
                otvet.sort() #сортировка итогового списка по возрастанию
        return otvet #возвращаем итоговый список
